<section class="home-video-sec">
  <div class="page-width">    
    {% if section.settings.background_image != blank %}
        <div class="home-video-bg" loading="lazy" style="background-image:url('{{ section.settings.background_image | img_url: "master" }}')">
    {% else %}
    <div class="home-video-bg" loading="lazy" style="background-image:url('{{ "collection-5" | placeholder_svg_tag }}')">
    {% endif %}
      <a href="{{ section.settings.background_url }}"><span>Play</span></a>
    </div>
  </div>
</section>



{% schema %}
  {
    "name": "Home Video",
    "settings": 
    [
        {
          "type" : "image_picker",
          "id" : "background_image",
            "label" : "Background Image" 
        },
        {
          "type" : "text",
          "id" : "background_url",
            "label" : "URL" 
        }
    ],
    "presets":[
      {
        "name": "Home Video",
        "category":"Custom Section"
      }
    ]
  }
{% endschema %}

