<section class="faqs-section">
  <div class="page-width">
    <h1> {{ section.settings.heading }} </h1>
    <div class="accordion_container">
         {% for block in section.blocks %}
         {% if block.settings.quiz != blank %}
        <div class="accordian-tabs faqs-accordian-tabs">
            <div class="accordion_head">
                <h3>{{ forloop.index }}. {{ block.settings.quiz }} <span class="plusminus">+</span></h3>
            </div>
            <div class="accordion_body" style="display: none;">
                <p>
                    {{  block.settings.answer }}
                </p>
            </div>
        </div>
        {% endif %}
        {% endfor %}
    </div>
  </div>
</section>



{% schema %}
  {
    "name": "Faqs Section",
    "settings": 
    [
        {
          "type" : "text",
          "id" : "heading",
            "label" : "Heading"
        }
    ],
    "blocks":
    [
        {
          "name" : "Slide",
          "type" : "Slide",
            "settings":
            [
                {
                  "type" : "text",
                  "id" : "quiz",
                    "label" : "Question"
                },
                {
                  "type" : "textarea",
                  "id" : "answer",
                    "label" : "Answer"
                }
            ]
        }
    ],
    "presets":[
      {
       "name": "Faqs Section",
        "category":"Custom Section"
      }
    ]
  }
{% endschema %}

