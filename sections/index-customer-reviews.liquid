<section class="review-section">
  <div class="page-width">
    <div class="wrapper">
      <h1> {{ section.settings.heading }} </h1>
      <div class="swiper-wrapper">
        <div class="swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
            <div class="swiper-slide {% if forloop.first %} swiper-slide-first {% endif %}">
              <img src="{{ block.settings.image | img_url : "master" }}" loading="lazy" alt="{{ block.settings.image.alt }}" title="{{ block.settings.name }}"/>
              <div class="swiper-content">
                <p> {{ block.settings.name }} </p>
                <span>{{ block.settings.post }}</span>
              </div>
              <p>{{ block.settings.review }}</p>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



{% schema %}
  {
    "name": "Customer Reviews",
    "settings": 
    [
        {
          "type" : "text",
          "id" : "heading",
            "label" : "Heading"
        }
    ],
    "blocks":
    [
        {
          "name" : "Slide",
          "type" : "Slide",
            "settings":
            [
                {
                  "type" : "text",
                  "id" : "name",
                    "label" : "Name"
                },
                {
                  "type" : "text",
                  "id" : "post",
                    "label" : "Post"
                },
                {
                  "type" : "textarea",
                  "id" : "review",
                    "label" : "Review"
                },
                {
                  "type" : "image_picker",
                  "id" : "image",
                    "label" : "Image"
                }
            ]
        }
    ],
    "presets":[
      {
        "name": "Customer Reviews",
        "category": "Custom Section"
      }
    ]
    
  }
{% endschema %}

